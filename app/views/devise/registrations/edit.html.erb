<h2><%= t('.edit_user') %></h2>
<div class="edit-container">
  <div class="edit-box">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", label: false, placeholder: t('.email') %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", label: false, placeholder: t('.new_password') %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", label: false, placeholder: t('.password_confirmation') %>
      </div>

      <div class="field">
        <%= f.password_field :current_password, autocomplete: "current-password", label: false, placeholder: t('.current_password')  %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "update" %>
      </div>
    <% end %>
  </div>
  <div class="cancel-account">
    <h3><%= t('.cancel_account') %></h3>
    <div class="buttons-container">
      <div class="cancel-button">
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "cancel-account-button" %>
      </div>
      <div class="back-button">
        <%= link_to dashboard_users_path, method: :get, class: 'back-button-icon' do %>
          <%= inline_svg_tag "back-icon.svg", class:"icon white round-button large" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
